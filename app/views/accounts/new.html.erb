<h1>New Customer Form</h1>

<%if @account.errors %>
    <%= @account.errors.full_messages %>
<% end %>

<form action='/submit_account' method='POST'>
    <label for="username">Username:</label>
    <input id="username" type="text" name="account[username]">
    <label for="password">Password:</label>
    <input id="password" type="password" name="account[password]">
    <label for="email">Email:</label>
    <input id="email" type="text" name="account[email]">
    <input type="submit" value="Submit User">
</form>